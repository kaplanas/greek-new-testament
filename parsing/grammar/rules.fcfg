IP[VERBLESS=?vl, MOOD=?m] -> VP[FINITE=y, VERBLESS=?vl, MOOD=?m, AGR=?a] NP[NULLABLE=n, WH=n, CASE=nominative, AGR=?a]
IP[VERBLESS=?vl, MOOD=?m] -> VP[FINITE=y, VERBLESS=?vl, MOOD=?m, AGR=[PERSON=3, NUMBER=singular, GENDER=neuter]] NP[NULLABLE=n, WH=n, CASE=nominative, AGR=[PERSON=3, NUMBER=plural, GENDER=neuter]]

# Wh constructions

IP[VERBLESS=?vl, MOOD=?m] -> NP[WH=y, CASE=nominative, AGR=?a] VP[FINITE=y, VERBLESS=?vl, MOOD=?m, AGR=?a]
IP[VERBLESS=?vl, MOOD=?m] -> NP[WH=y, CASE=?c] IP[VERBLESS=?vl, MOOD=?m]/NP[CASE=?c]
IP[VERBLESS=?vl, MOOD=?m] -> AdvP[WH=y] IP[VERBLESS=?vl, MOOD=?m]

# Things that can get tacked onto sentences

S -> C[SECOND_POSITION=n] S
S -> AdjP S
S -> S AdjP

# Conjunction

IP[VERBLESS=n, MOOD=?m] -> IP[VERBLESS=n, MOOD=?m] IP[VERBLESS=n, MOOD=?m]

